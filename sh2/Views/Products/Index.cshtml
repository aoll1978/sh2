@model IEnumerable<sh2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products Management / Управление товарами</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Image</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var mainImg = item.ProductImages?.FirstOrDefault();
                        var imgUrl = (mainImg != null) ? mainImg.ImageUrl : "https://placehold.co/100?text=No+Img";
                    }
                    <img src="@imgUrl" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;" alt="Product Image" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (item.InStock > 0)
                    {
                        <span class="badge bg-success">@item.InStock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">0</span>
                    }
                </td>

                <td>
                    @if (item.ProductCategories != null && item.ProductCategories.Any())
                    {
                        // Берем имена категорий и склеиваем их через запятую
                        // Take category names and join them with comma
                        @string.Join(", ", item.ProductCategories.Select(pc => pc.Category.Name))
                    }
                    else
                    {
                        <span class="text-muted">No Category</span>
                    }
                </td>

                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

