@model sh2.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="InStock" class="control-label"></label>
                <input asp-for="InStock" class="form-control" />
                <span asp-validation-for="InStock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 card p-3 bg-light">
                <label class="fw-bold mb-2">Categories / Категории</label>
                @foreach (var cat in ViewBag.Categories as List<sh2.Models.Category>)
                {
                    // Проверяем, привязан ли товар к этой категории
                    bool isChecked = Model.ProductCategories.Any(pc => pc.CategoryId == cat.Id);

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedCategories"
                               value="@cat.Id"
                               id="cat_@cat.Id"
                               @(isChecked ? "checked" : "")>
                        <label class="form-check-label" for="cat_@cat.Id">
                            @cat.Name
                        </label>
                    </div>
                }
            </div>

            @if (Model.ProductImages != null && Model.ProductImages.Count > 0)
            {
                <div class="form-group mb-3">
                    <label class="fw-bold">Current Images (Select to Delete)</label>
                    <div class="d-flex flex-wrap gap-3 mt-2">
                        @foreach (var img in Model.ProductImages)
                        {
                            <div class="border p-2 text-center bg-white rounded">
                                <img src="@img.ImageUrl" style="width: 100px; height: 100px; object-fit: cover; display:block;" class="mb-2 rounded" />
                                <div class="form-check d-inline-block">
                                    <input class="form-check-input" type="checkbox" name="imagesToDelete" value="@img.Id" id="del_@img.Id">
                                    <label class="form-check-label text-danger small" for="del_@img.Id">
                                        Delete
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Add New Images</label>
                <input type="file" name="uploadedImages" class="form-control" multiple accept="image/*" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>