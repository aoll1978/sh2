@model sh2.Models.Product

@{
    ViewData["Title"] = Model.Name;
    // Находим первую картинку для старта
    var mainImage = Model.ProductImages.FirstOrDefault()?.ImageUrl ?? "https://placehold.co/600x600?text=No+Image";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm mb-3">
                <img id="mainImage" src="@mainImage" class="img-fluid rounded" style="width: 100%; height: 400px; object-fit: contain;" alt="@Model.Name">
            </div>

            @if (Model.ProductImages.Count > 1)
            {
                <div class="d-flex gap-2 overflow-auto">
                    @foreach (var img in Model.ProductImages)
                    {
                        <img src="@img.ImageUrl"
                             class="img-thumbnail thumbnail-cursor"
                             style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                             onclick="changeImage(this.src)"
                             alt="Thumbnail">
                    }
                </div>
            }
        </div>

        <div class="col-md-6">
            <h1 class="display-5 fw-bold">@Model.Name</h1>

            <div class="mb-3">
                @foreach (var pc in Model.ProductCategories)
                {
                    <span class="badge bg-secondary me-1">@pc.Category.Name</span>
                }
            </div>

            <h2 class="text-primary fw-bold mb-3">@Model.Price.ToString("C")</h2>

            <p class="lead">@Model.Description</p>

            <hr />

            <dl class="row">
                <dt class="col-sm-4">Material / Материал</dt>
                <dd class="col-sm-8">@(Model.Material ?? "-")</dd>

                <dt class="col-sm-4">Rating / Рейтинг</dt>
                <dd class="col-sm-8">
                    <span class="text-warning">★ @Model.Rating</span>
                </dd>

                <dt class="col-sm-4">Stock / Склад</dt>
                <dd class="col-sm-8">
                    @if (Model.InStock > 0)
                    {
                        <span class="text-success fw-bold">In Stock (@Model.InStock items)</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">Out of Stock</span>
                    }
                </dd>
            </dl>

            <hr />

            <div class="d-grid gap-2 d-md-block">
                @if (Model.InStock > 0)
                {
                    <button class="btn btn-lg btn-primary px-5" type="button">
                        <i class="bi bi-cart-plus"></i> Add to Cart / В корзину
                    </button>
                }
                else
                {
                    <button class="btn btn-lg btn-secondary px-5" disabled>Not Available</button>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function changeImage(src) {
        document.getElementById('mainImage').src = src;
    }
</script>
