@model sh2.Models.Cart

@{
    ViewData["Title"] = "Your Cart"; 
}

<div class="container mt-4">
    <h2>Your Shopping Cart / Ваша Корзина</h2>
    <hr />

    @if (Model.Items.Count > 0)
    {
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Product / Товар</th>
                    <th class="text-center">Quantity / Кол-во</th>
                    <th class="text-end">Price / Цена</th>
                    <th class="text-end">Subtotal / Сумма</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@line.Product.Name</td>
                        <td class="text-center">@line.Quantity</td>
                        <td class="text-end">@line.Product.Price.ToString("C")</td>
                        <td class="text-end">
                            @((line.Quantity * line.Product.Price).ToString("C"))
                        </td>
                        <td class="text-center">
                            <a asp-action="RemoveFromCart" asp-route-id="@line.Product.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold fs-5">Total:</td>
                    <td class="text-end fw-bold fs-5 text-primary">
                        @Model.ComputeTotalValue().ToString("C")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">Continue Shopping</a>
            <a asp-controller="Orders" asp-action="Checkout" class="btn btn-success btn-lg">Checkout / Оформить</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Your cart is empty! / Ваша корзина пуста!
            <br />
            <a asp-controller="Home" asp-action="Index" class="alert-link">Go to Store / В магазин</a>
        </div>
    }
</div>